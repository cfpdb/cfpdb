{
    "type": "object",
    "definitions": {
        "dates": {
            "oneOf": [
                { "type": "date" },
                {
                    "type": "array",
                    "items": {
                        "type": "date"
                    },
                    "uniqueItems": true,
                    "minItems": 2,
                    "maxItems": 2
                }
            ]
        },
        "namedDateSet": {
            "type": "object",
            "properties": {
                "abstract":     { "$ref": "#/definitions/dates" },
                "submit":       { "$ref": "#/definitions/dates" },
                "notification": { "$ref": "#/definitions/dates" },
                "rebuttal":     { "$ref": "#/definitions/dates" }
            },
            "additionalProperties": false
        },
        "dateSet": {
            "oneOf": [
                { "$ref": "#/definitions/dates" },
                { "$ref": "#/definitions/namedDateSet" }
            ]
        }
    },
    "properties": {
        "year": { "type": "integer" },
        "homepage": {
            "type": "string",
            "format": "uri",
            "pattern": "^(https?)://"

        },
        "colocated": { "type": "string" },
        "topics": {
            "type": "array",
            "items": { "type": "string" }
        },
        "people": {
            "type": "object",
            "additionalProperties": {
                "type": "object",
                "additionalProperties": {
                    "type": ["string", "null"]
                }
            }
        },
        "location": {
            "type": "object",
            "properties": {
                "country": { "type": "string" },
                "state":   { "type": "string" },
                "city":    { "type": "string" },
                "venue":   { "type": "string" }
            }
        },
        "dates": { "$ref": "#/definitions/dates" }
    },
    "patternProperties": {
        "^deadlines[0-9]*$": {
            "type": "object",
            "properties": {
                "poster":   { "$ref": "#/definitions/dateSet" },
                "workshop": { "$ref": "#/definitions/dateSet" },
                "tutorial": { "$ref": "#/definitions/dateSet" },
                "wip":      { "$ref": "#/definitions/dateSet" },
                "bof":      { "$ref": "#/definitions/dateSet" }
            },
            "patternProperties": {
                "^paper[0-9]*$": { "$ref": "#/definitions/dateSet" }
            },
            "additionalProperties": false
        }
    },
    "additionalProperties": false,
    "required": [
        "year"
    ]
}
